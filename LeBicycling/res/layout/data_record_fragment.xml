<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_total_distance"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="00.00"
            android:textColor="#000"
            android:textSize="45sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/total_desciption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总距离：(km)"
            android:textColor="#808080"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_all_times"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="00"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_all_long"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="0.00"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_all_calorie"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="0.00"
            android:textColor="#000"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/alltimesDesciption"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="总次数"
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/alllongDesciption"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="总时长(min)"
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/allcalorieDesciption"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="总耗能(千卡)"
            android:textColor="#808080"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:text="2016-03-07"
            android:textColor="#00bfff"
            android:textSize="17sp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>