<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JumpMainActivity" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView 
            android:id="@+id/jump_data"
            android:layout_margin="10dp"
            android:layout_width="50dp" 
            android:layout_height="50dp"
            android:src="@drawable/data"/>
        <TextView 
            android:layout_width="0dp" 
            android:layout_height="50dp"
            android:layout_weight="1"
            />
        
        <ImageView 
            android:id="@+id/jump_setting"
            android:layout_margin="10dp"
            android:layout_width="50dp" 
            android:layout_height="50dp"
            android:src="@drawable/jumpsetting"
            
            />
    </LinearLayout>

    <com.lepower.widget.Count
        android:id="@+id/ts_count"
        android:layout_width="wrap_content"
        android:layout_height="500px" />

    <TextView
        android:id="@+id/count"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:textSize="45sp"
        android:gravity="center" />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="30sp"
        android:textColor="#AAAAAA"
        android:text="@string/jumpaim"
        android:gravity="center" 
        />
    <TextView
        android:id="@+id/dest"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="30sp"
        android:textColor="#AAAAAA"
        android:text="10"
        android:gravity="center" />
    <ImageView 
        android:id="@+id/startorstop"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/startjump"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:onClick="onClick"
        />
  

</LinearLayout>