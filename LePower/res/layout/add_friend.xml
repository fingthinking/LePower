<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:orientation="vertical" >
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00a0e9">
        
        <ImageView 
            android:id="@+id/iv_add_friend_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/bt_back"/>
        
         <TextView 
        	style="@style/TitleStyle"
        	android:text="添加"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
         
        
        <LinearLayout 
            android:id="@+id/id_find_friend_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include 
            	layout="@layout/view_find_friend_item" />
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/id_neib_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include 
            	layout="@layout/view_neib_item" />
        </LinearLayout>
        
     </LinearLayout>
     
    <LinearLayout 
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        
        <LinearLayout 
            android:id="@+id/id_qqfriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
            	layout="@layout/view_qqfriend_item" />
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/id_wechat_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include 
            	layout="@layout/view_wechat_item" />
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/id_weibo_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include 
            	layout="@layout/view_weibo_item" />
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/id_wechatcircle_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include 
            	layout="@layout/view_wechatcircle_item" />
        </LinearLayout>
        
      
       
       
      
  
    </LinearLayout>

</LinearLayout>
